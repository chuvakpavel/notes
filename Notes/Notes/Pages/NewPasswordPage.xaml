<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:behaviors="clr-namespace:Notes.Behaviors;assembly=Notes"
             x:Class="Notes.Pages.NewPasswordPage">
    <ContentPage.Content>
      <FlexLayout Direction="Row"  Wrap="Wrap" AlignItems="Center" AlignContent="Center" Padding="50">
            <Entry Placeholder="Password" BackgroundColor="White" FlexLayout.Basis="100%" x:Name="PasswordEntry" ></Entry>
            <Entry Placeholder="Confirm Password" BackgroundColor="White" FlexLayout.Basis="100%">
                <Entry.Behaviors>
                    <behaviors:ConfirmationValidatorBehavior x:Name="EmailConfirmationBehavior" ConfirmationText="{Binding Source={x:Reference PasswordEntry}, Path=Text}" />
                </Entry.Behaviors>
            </Entry>
            <Button Text="Apply" FlexLayout.Basis="100%" IsEnabled="{Binding Source={x:Reference EmailConfirmationBehavior}, Path=IsValid}"></Button>
          <Button Text="AddNote" FlexLayout.Basis="100%" Clicked="AddNoteButtonClicked"/>
        </FlexLayout>
    </ContentPage.Content>
</ContentPage>